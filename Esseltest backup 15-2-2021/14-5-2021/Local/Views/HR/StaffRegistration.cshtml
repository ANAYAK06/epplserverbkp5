                @Html.LabelFor(model => model.OldEmpUsername)
                @Html.EditorFor(model => model.OldEmpUsername, new { htmlAttributes = new { @class = "form-control", @id = "txtOldEmpSearch", @onkeyup = "onchangeeventOldEmp();",

               @type = "search",
               @onpaste = "return false;" ,
