@model EsselTestLocalApplication.Models.HR.GenaratedPayRollData
@{
    ViewBag.Title = "ZSamplePayRoll";
    Layout = "~/Views/Shared/EsselMaster.cshtml";
}

@*<h2>ZSamplePayRoll</h2>*@
<div class="row  text-center">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">
        <table class="hover stripe nowrap example dataTable no-footer">
            <thead style="color:white">
                <tr>
                    <td style="text-align:center;background-color:#202447;color:#fff !important">Rowno</td>
                    <td style="text-align:center;background-color:#202447;color:#fff !important">EmployeeId</td>
                    <td style="text-align:center;background-color:#202447;color:#fff !important">EmpRefno</td>
                    <td style="text-align:center;background-color:#202447;color:#fff !important">JoiningCostCenter</td>
                    <td style="text-align:center;background-color:#202447;color:#fff !important">Category</td>
                    <td style="text-align:center;background-color:#202447;color:#fff !important">RuleStatus</td>
                    <td style="text-align:center;background-color:#202447;color:#fff !important">Gross</td>
                    <td style="text-align:center;background-color:#202447;color:#fff !important">TotalDeduction</td>
                    <td style="text-align:center;background-color:#202447;color:#fff !important">NetAmount</td>
                    <td style="text-align:center;background-color:#202447;color:#fff !important">DCA</td>
                    <td style="text-align:center;background-color:#202447;color:#fff !important">SubDCA</td>
                    <td style="text-align:center;background-color:#202447;color:#fff !important">TransactionRefNo</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.MonthlySalaryData)
                {
                    <tr>
                        <td>@item.Rowno</td>
                        <td>@item.EmployeeId</td>
                        <td>@item.EmpRefno</td>
                        <td>@item.JoiningCostCenter</td>
                        <td>@item.Category</td>
                        <td>@item.RuleStatus</td>
                        <td>@item.Gross</td>
                        <td>@item.TotalDeduction</td>
                        <td>@item.NetAmount</td>
                        <td>@item.DCA</td>
                        <td>@item.SubDCA</td>
                        <td>@item.TransactionRefNo</td>
                    </tr>
                }
            </tbody>

        </table>

        <hr />

        <table class="hover stripe nowrap example dataTable no-footer">
            <thead>
                <tr>
                    <td style="text-align:center;background-color:#202447;color:#fff !important">Employeeid</td>
                    <td style="text-align:center;background-color:#202447;color:#fff !important">Head</td>
                    <td style="text-align:center;background-color:#202447;color:#fff !important;border-right:1px solid #fff;">Rs</td>
                    <td style="text-align:center;background-color:#202447;color:#fff !important">Type</td>
                    <td style="text-align:center;background-color:#202447;color:#fff !important">IsEditable</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.MonthlySalaryDetailsData)
                {

                    <tr>
                        <td style="text-align:left;font-size:11px;vertical-align:middle">

                            @Html.DisplayFor(modelItem => item.EmployeeId)

                        </td>
                        <td style="text-align:left;font-size:11px;vertical-align:middle">

                            @Html.DisplayFor(modelItem => item.SalaryHead)

                        </td>
                        <td style="text-align:center;border-right:1px solid #000;">
                            @{
                                var formated = String.Format("{0:0.00}", item.HeadAmount);
                                @Html.DisplayFor(modelItem => item.HeadAmount, formated)
                                @*@Html.TextBoxFor(modelItem => item.HeadAmount, formated, htmlAttributes: new { @class = "form-control", onkeypress = "return ValidateAmount(this,event);", onkeyup = "CountTotal()" })*@
                            }
                        </td>
                        <td> @Html.DisplayFor(modelItem => item.HeadType)</td>
                        <td> @Html.DisplayFor(modelItem => item.IsEditable)</td>
                    </tr>

                }

            </tbody>
        </table>
    </div>
    <div class="col-lg-1"></div>
</div>

<br/>
